---
apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: argocd-server-ingress
  namespace: {{ argocd_namespace }}
  annotations:
    nginx.ingress.kubernetes.io/backend-protocol: "{{ 'HTTP' if argocd_server_insecure else 'HTTPS' }}"
    nginx.ingress.kubernetes.io/ssl-passthrough: "{{ 'false' if argocd_server_insecure else 'true' }}"
{% if argocd_server_insecure %}
    nginx.ingress.kubernetes.io/force-ssl-redirect: "true"
{% endif %}
spec:
  ingressClassName: {{ argocd_ingress_class }}
  rules:
    - host: {{ argocd_ingress_host }}
      http:
        paths:
          - path: /
            pathType: Prefix
            backend:
              service:
                name: argocd-server
                port:
                  number: {{ 80 if argocd_server_insecure else 443 }}
{% if argocd_ingress_tls_enabled %}
  tls:
    - hosts:
        - {{ argocd_ingress_host }}
      secretName: {{ argocd_ingress_tls_secret }}
{% endif %}
